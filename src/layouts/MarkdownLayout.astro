---
import Layout from '~/layouts/PageLayout.astro';
import type { MetaData } from '~/types';

export interface Props {
  frontmatter: {
    title?: string;
    description?: string;
    image?: {
      src: string;
      alt: string;
    };
    canonical?: string;
  };
}

const { frontmatter } = Astro.props;

const metadata: MetaData = {
  title: frontmatter?.title,
  description: frontmatter?.description,
  canonical: frontmatter?.canonical,
  openGraph: {
    title: frontmatter?.title,
    description: frontmatter?.description,
    type: 'article',
    url: frontmatter?.canonical || Astro.url.href,
    image: frontmatter?.image || {
      src: 'https://res.cloudinary.com/dx0dcvqlv/image/upload/w_1200,h_626,c_lfill,f_jpg/v1739594496/og_image',
      alt: frontmatter?.title || 'Page image',
      width: 1200,
      height: 630,
    },
    site_name: 'Onsite Car Key',
    locale: 'en_US',
  },
  twitter: {
    card: 'summary_large_image',
    site: '@onsitecarkey',
    title: frontmatter?.title,
    description: frontmatter?.description,
    image: frontmatter?.image?.src || 'https://res.cloudinary.com/dx0dcvqlv/image/upload/w_1200,h_626,c_lfill,f_jpg/v1739594496/og_image',
  },
};
---

<Layout metadata={metadata}>
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
    <h1 class="font-bold font-heading text-4xl md:text-5xl leading-tighter tracking-tighter">{frontmatter.title}</h1>
    <div
      class="mx-auto prose prose-lg max-w-4xl dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg mt-8"
    >
      <slot />
    </div>
  </section>
</Layout>
