---
import Layout from '~/layouts/PageLayout.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact Onsite Car Key | 24/7 Car Locksmith South Florida',
  description:
    'Need a car locksmith in South Florida? Contact us for 24/7 emergency service in Miami-Dade, Broward, and Palm Beach counties. Multiple ways to reach our professional team.',
  openGraph: {
    title: 'Contact Onsite Car Key | 24/7 Car Locksmith South Florida',
    description:
      'Professional automotive locksmith services available 24/7 throughout South Florida. Emergency service, key programming, and lockout assistance in Miami-Dade, Broward, and Palm Beach counties.',
    type: 'website',
    url: 'https://onsitecarkey.com/contact',
    image: {
      src: 'https://res.cloudinary.com/dx0dcvqlv/image/upload/w_1200,h_626,c_lfill,f_jpg/v1739763607/og_image',
      alt: '24/7 Car Locksmith Service in South Florida',
      width: 1200,
      height: 630,
    },
    site_name: 'Onsite Car Key',
    locale: 'en_US',
  },
  twitter: {
    card: 'summary_large_image',
    site: '@onsitecarkey',
    title: 'Contact Your Local Car Locksmith in South Florida',
    description:
      '24/7 emergency automotive locksmith services throughout Miami-Dade, Broward, and Palm Beach counties. Professional and reliable service when you need it.',
    image: 'https://res.cloudinary.com/dx0dcvqlv/image/upload/w_1200,h_626,c_lfill,f_jpg/v1739763607/og_image',
  },
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* 

  <HeroText tagline="Contact" title="Let's Connect!" />-->

  <!-- Contact form Widget ************** 
  <ContactUs
    id="form"
    title="Drop us a message today!"
    subtitle="For quicker answers, explore our FAQs section. You may find the solution you're looking  for right there! If not, our support team is delighted to help you."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="Our support team typically responds within 24 business hours."
  />
  -->

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get in Touch"
    subtitle="Multiple ways to reach our professional automotive locksmith team"
    items={[
      {
        title: 'Emergency Service',
        description: '(305) 555-5887', // Update with actual South Florida number
        icon: 'tabler:phone',
        callToAction: {
          text: 'Call Now',
          href: 'tel:3055555887',
        },
      },
      {
        title: 'Email',
        description: 'info@onsitecarkey.com',
        icon: 'tabler:mail',
        callToAction: {
          text: 'Send Email',
          href: 'mailto:info@onsitecarkey.com',
        },
      },
      {
        title: 'WhatsApp',
        description: 'Chat with us on WhatsApp',
        icon: 'tabler:brand-whatsapp',
        callToAction: {
          text: 'Message Us',
          href: 'https://wa.me/15027175887',
        },
      },
      {
        title: 'Facebook Messenger',
        description: 'Connect on Facebook',
        icon: 'tabler:brand-messenger',
        callToAction: {
          text: 'Message Us',
          href: 'https://m.me/onsitecarkey',
        },
      },
      {
        title: 'X',
        description: 'Follow us for updates and DMs',
        icon: 'tabler:brand-x',
        callToAction: {
          text: 'Follow Us',
          href: 'https://twitter.com/onsitecarkey',
        },
      },
      {
        title: 'Instagram',
        description: 'Follow us for updates',
        icon: 'tabler:brand-instagram',
        callToAction: {
          text: 'Follow Us',
          href: 'https://instagram.com/onsitecarkey',
        },
      },
      {
        title: 'Service Area',
        description: 'Service Area: Miami-Dade, Broward, and Palm Beach counties',
        icon: 'tabler:map-pin',
      },
    ]}
    columns={3}
    classes={{ container: 'max-w-5xl' }}
  />
</Layout>
