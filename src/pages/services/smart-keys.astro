---
import Content from "~/components/widgets/Content.astro";
import Features2 from "~/components/widgets/Features2.astro";
import Hero from "~/components/widgets/Hero.astro";
import Layout from "~/layouts/PageLayout.astro";

const metadata = {
	title: "Smart Car Key Programming & Replacement Services South Florida",
	description:
		"Expert smart car key and key fob programming in Miami-Dade, Broward, and Palm Beach counties. OEM-quality replacement, 24/7 mobile service.",
	openGraph: {
		title:
			"Professional Smart Key & Fob Programming | South Florida Car Locksmith",
		description:
			"Expert smart key programming and key fob replacement. Available 24/7 throughout Miami-Dade, Broward, and Palm Beach counties.",
		type: "website",
		url: "https://onsitecarkey.com/services/smart-keys",
		image: {
			src: "https://res.cloudinary.com/dx0dcvqlv/image/upload/w_1200,h_626,c_lfill,f_jpg/v1739763607/og_image",
			alt: "Professional smart key programming service in South Florida",
			width: 1200,
			height: 630,
		},
		site_name: "Onsite Car Key",
		locale: "en_US",
	},
	twitter: {
		card: "summary_large_image",
		site: "@onsitecarkey",
		title: "Smart Car Key & Fob Programming Services South Florida",
		description:
			"Professional smart key and key fob programming. OEM-quality replacement available 24/7.",
		image:
			"https://res.cloudinary.com/dx0dcvqlv/image/upload/w_1200,h_626,c_lfill,f_jpg/v1739763607/og_image",
	},
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Smart Key Services"
    title="Expert Smart Car Key Solutions"
    subtitle="Professional programming and replacement for all modern vehicle smart keys. Factory-level equipment and OEM-quality parts for perfect compatibility."
    actions={[
      {
        variant: 'primary',
        text: 'Call (954) 998-5887',
        href: 'tel:9549985887',
      },
    ]}
    image={{
      src: '~/assets/images/jeep-smart-key.jpg',
      alt: 'Smart key programming service in Louisville',
    }}
  />

  <Features2
    title="Smart Key Solutions"
    subtitle="Complete smart key and key fob services for modern vehicles"
    columns={3}
    items={[
      {
        title: 'Smart Key Programming',
        description:
          'Factory-level programming for proximity keys and smart fobs. Compatible with all major vehicle brands including Toyota, Honda, Ford, GM, Chrysler/Dodge, etc.',
        icon: 'tabler:cpu',
      },
      {
        title: 'Push-to-Start Keys',
        description:
          'Expert replacement and programming for push-to-start button vehicles. Full testing and verification of all smart key functions.',
        icon: 'tabler:car',
      },
      {
        title: 'Key Fob Repair',
        description:
          'Professional diagnostics and repair of malfunctioning smart key fobs. Battery replacement and button repair services available.',
        icon: 'tabler:tool',
      },
    ]}
  />

  <Content
    isReversed
    items={[
      {
        title: 'OEM Quality',
        description:
          "Original equipment manufacturer quality parts and programming. Ensures perfect compatibility with your vehicle's security system.",
        icon: 'tabler:certificate',
      },
      {
        title: 'Advanced Equipment',
        description:
          'Latest diagnostic and programming tools to handle modern vehicle security systems and smart keys.',
        icon: 'tabler:device-laptop',
      },
      {
        title: 'Warranty Protection',
        description:
          'All smart key services backed by our satisfaction guarantee. Full warranty on parts and programming.',
        icon: 'tabler:shield',
      },
    ]}
    image={{
      src: '~/assets/images/couple-in-car-dealership.jpg',
      alt: 'Professional smart key programming equipment',
    }}
  >
    <Fragment slot="content"> Professional Smart Key Programming </Fragment>
  </Content>
</Layout>
