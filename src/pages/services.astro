---
import BlogLatestPosts from "~/components/widgets/BlogLatestPosts.astro";
import CallToAction from "~/components/widgets/CallToAction.astro";
import Features2 from "~/components/widgets/Features2.astro";
import Layout from "~/layouts/PageLayout.astro";

const metadata = {
	title: "Car Locksmith Services South Florida | Onsite Car Key",
	description:
		"Professional automotive locksmith services in Miami-Dade, Broward, and Palm Beach counties. Smart key programming, car unlocking, ignition repair, and more. Available 24/7.",
	canonical: "https://onsitecarkey.com/services",
	openGraph: {
		title: "Professional Car Locksmith Services South Florida | Onsite Car Key",
		description:
			"Expert automotive locksmith services including smart key programming, car unlocking, ignition repair, and key duplication. Available 24/7 throughout South Florida.",
		type: "website",
		url: "https://onsitecarkey.com/services",
		image: {
			src: "https://res.cloudinary.com/dx0dcvqlv/image/upload/w_1200,h_626,c_lfill,f_jpg/v1739763607/og_image",
			alt: "Professional car locksmith services in South Florida",
			width: 1200,
			height: 630,
		},
		site_name: "Onsite Car Key",
		locale: "en_US",
	},
	twitter: {
		card: "summary_large_image",
		site: "@onsitecarkey",
		title: "Car Locksmith Services South Florida | Available 24/7",
		description:
			"Professional automotive locksmith services in South Florida. Smart keys, unlocking, ignition repair, and more.",
		image:
			"https://res.cloudinary.com/dx0dcvqlv/image/upload/w_1200,h_626,c_lfill,f_jpg/v1739763607/og_image",
	},
	robots: {
		index: true,
		follow: true,
		nocache: true,
		googleBot: {
			index: true,
			follow: true,
			"max-video-preview": -1,
		},
	},
};
---

<Layout metadata={metadata}>
  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Car Locksmith Services"
    subtitle="We offer a wide range of automotive locksmith services to meet your needs."
    image={{
      src: '~/assets/images/car-locksmith-services.jpg',
      alt: 'Car locksmith services',
    }}
    items={[
      {
        title: 'Smart Key Programming',
        description:
          'Advanced programming for modern vehicle smart keys and key fobs. Compatible with all major car brands.',
        icon: 'tabler:cpu',
        callToAction: {
          text: 'Learn More',
          href: '/services/smart-keys',
        },
      },
      {
        title: 'Car Unlocking',
        description:
          'Fast, damage-free car unlocking using professional tools. Available 24/7 for emergency situations.',
        icon: 'tabler:car',
        callToAction: {
          text: 'Learn More',
          href: '/services/car-unlocking',
        },
      },
      {
        title: 'Ignition Replacement/Repair',
        description: 'Expert ignition system repair and replacement services to get you back on the road quickly.',
        icon: 'tabler:settings',
        callToAction: {
          text: 'Learn More',
          href: '/services/ignition-repair',
        },
      },
      {
        title: 'Key Duplication',
        description:
          'High-precision key cutting services for all vehicle types. OEM-quality materials ensure perfect fit and performance',
        icon: 'tabler:copy',
        callToAction: {
          text: 'Call now',
          href: 'tel:9549985887',
        },
      },
      {
        title: 'Key Extraction',
        description: 'Safe and efficient removal of broken keys from locks and ignitions without causing damage.',
        icon: 'tabler:key',
        callToAction: {
          text: 'Call now',
          href: 'tel:9549985887',
        },
      },
      {
        title: 'All Keys Lost Situation',
        description:
          'Comprehensive solutions for situations where all keys are lost. We can create new keys and reprogram your vehicle.',
        icon: 'tabler:alert-triangle',
        callToAction: {
          text: 'Learn More',
          href: '/services/all-keys-lost',
        },
      },
    ]}
  />
  <!-- BlogLatestPost Widget **************** -->

  <BlogLatestPosts
    id="blog"
    title="Explore my insightful articles on my blog"
    information={`Explore our blog for professional advice on car security, key replacement, and locksmith services. 
                Find helpful guides, industry insights, and tips from certified automotive locksmiths.`}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>
  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contact Us',
        href: '/contact',
        icon: 'tabler:phone',
      },
    ]}
  >
    <Fragment slot="title">Need Professional Car Locksmith Services?</Fragment>

    <Fragment slot="subtitle">
      Contact us today for fast, reliable, and professional automotive locksmith services serving Miami-Dade, Broward,
      and Palm Beach counties.
    </Fragment>
  </CallToAction>
</Layout>
