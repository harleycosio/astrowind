---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: "About Onsite Car Key - South Florida's Trusted Automotive Locksmith",
  description:
    "Learn about South Florida's premier automotive locksmith service. Serving Miami-Dade, Broward, and Palm Beach counties with professional key services since 2015.",
  openGraph: {
    title: "About Onsite Car Key - South Florida's Premier Automotive Locksmith",
    description:
      "Professional automotive locksmith serving South Florida's tri-county area. Licensed, insured, and available 24/7 with 15,000+ satisfied customers.",
    type: 'website',
    url: 'https://onsitecarkey.com/about',
    image: {
      src: 'https://res.cloudinary.com/dx0dcvqlv/image/upload/w_1200,h_626,c_lfill,f_jpg/v1739763607/og_image',
      alt: 'Professional automotive locksmith service in South Florida',
      width: 1200,
      height: 630,
    },
    site_name: 'Onsite Car Key',
    locale: 'en_US',
  },
  twitter: {
    card: 'summary_large_image',
    site: '@onsitecarkey',
    title: "South Florida's Trusted Car Locksmith - About Us",
    description: 'Professional automotive locksmith serving Miami-Dade, Broward, and Palm Beach counties since 2015.',
    image: 'https://res.cloudinary.com/dx0dcvqlv/image/upload/w_1200,h_626,c_lfill,f_jpg/v1739763607/og_image',
  },
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Us"
    image={{
      src: '~/assets/images/professional-locksmith.jpg',
      alt: 'Professional automotive locksmith service in South Florida',
    }}
  >
    <Fragment slot="title">
      South Florida's Trusted <span class="text-accent dark:text-white highlight">Automotive Locksmith</span> Service
    </Fragment>

    <Fragment slot="subtitle">
      Since 2015, Onsite Car Key has been providing professional automotive locksmith services to South Florida's
      tri-county area. We pride ourselves on fast response times, competitive pricing, and exceptional customer service.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Growth in Numbers"
    stats={[
      { title: 'Years of Service', amount: '9+' },
      { title: 'Satisfied Customers', amount: '15K+' },
      { title: 'Response Time', amount: '40min' },
      { title: 'Service Area Miles', amount: '50' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Why Choose Onsite Car Key"
    subtitle="We combine professional expertise with local dedication to provide the best automotive locksmith services in South Florida."
    columns={3}
    items={[
      {
        title: 'Licensed & Insured',
        description:
          'Fully licensed, bonded, and insured for your peace of mind. Our technicians are certified and regularly trained on the latest automotive security technologies.',
        icon: 'tabler:shield-check',
      },
      {
        title: '24/7 Availability',
        description:
          'Emergency services available 24 hours a day, 7 days a week. We understand that lockouts and key issues can happen at any time.',
        icon: 'tabler:clock',
      },
      {
        title: 'Advanced Equipment',
        description:
          'State-of-the-art key cutting and programming equipment to handle all makes and models of vehicles.',
        icon: 'tabler:tools',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Core Values"
    subtitle="At Onsite Car Key, we believe in providing more than just locksmith services. We're committed to excellence in everything we do."
    items={[
      {
        title: 'Customer First',
        description:
          'Every decision we make is focused on providing the best possible service to our customers. We prioritize your security, convenience, and satisfaction.',
      },
      {
        title: 'Professional Excellence',
        description:
          'Our technicians undergo continuous training to stay current with the latest automotive security technologies and techniques.',
      },
      {
        title: 'Honest Pricing',
        description:
          'We believe in transparent pricing with no hidden fees. You will always know the cost upfront before any work begins.',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Service Coverage"
    tagline="Where We Serve"
    columns={3}
    items={[
      {
        title: 'Miami-Dade County',
        description: 'Complete coverage of Miami, Miami Beach, Hialeah, and surrounding cities',
      },
      {
        title: 'Broward County',
        description: 'Serving Fort Lauderdale, Hollywood, Pompano Beach, and nearby areas',
      },
      {
        title: 'Palm Beach County',
        description: 'Available in West Palm Beach, Boca Raton, and surrounding communities',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Contact Our Team"
    tagline="Get in Touch"
    columns={2}
    items={[
      {
        title: '24/7 Emergency Service',
        description: 'Call (954) 998-5887 for immediate assistance',
        icon: 'tabler:phone',
      },
      {
        title: 'Business Hours',
        description: 'Monday-Sunday: Open 24 Hours',
        icon: 'tabler:clock',
      },
    ]}
  />
</Layout>
